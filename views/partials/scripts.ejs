<!-- мій javascript -->
<script>
(() => {
    window.loader = {
        load: function (uri, element, method) {
            let options = undefined;
            if(method === 'post') {
                options = {
                    method,
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    },
                }
            }
            return fetch(uri, options)
                .then(response => response.text())
                .then(text => {
                    element.innerHTML = text;
                })
                .catch(error => {
                    console.error(error);
                });
        }
    }
})()
</script>